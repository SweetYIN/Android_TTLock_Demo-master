<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/coner"
    >
    <ImageView
        android:id="@+id/house_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        />

    <LinearLayout
        android:id="@+id/house_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/house_imageView">

        <TextView
            android:id="@+id/house_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房源编号：TQ6473564327"
            app:layout_constraintLeft_toRightOf="@+id/house_imageView" />

        <TextView
            android:id="@+id/house_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="潘家园东里一号楼5单元509" />

        <TextView
            android:id="@+id/house_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="整套出租/2室2厅/76m2" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/house_function_Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#D6D6D6"
        app:layout_constraintBottom_toBottomOf="parent"
        >


        <Button
            android:id="@+id/btn_password_reset"
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height"
            android:layout_alignParentRight="true"
            android:background="@drawable/searchview_line"
            android:text="密码重置"
            android:textSize="10sp"
            android:layout_marginRight="15dp"
           />

        <Button
            android:id="@+id/btn_check_house"
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/searchview_line"
            android:text="查房"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
        <Button
            android:id="@+id/btn_binding"
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/searchview_line"
            android:text="绑定"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
